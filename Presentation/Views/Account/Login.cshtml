@model LoginViewModel
<div class="container pt-5">
  <div class="card shadow border">
    <div class="card-header bg-primary bg-gradient ms-0 py-4">
      <div class="row">
        <div class="col-12 text-center">
          <h2 class="py-2 text-white">
            Đăng Nhập
          </h2>
        </div>
      </div>
    </div>
    <div class="card-body p-4">
      <div class="row">
        <div class="col-md-12">
          <section>
            <form method="post">
              <input asp-for="RedirectUrl" hidden />
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control border shadow" aria-required="true" />
                <label asp-for="Email" class="form-label">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
              </div>
              <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control border shadow" aria-required="true" />
                <label asp-for="Password" class="form-label">Mật Khẩu</label>
                <span asp-validation-for="Password" class="text-danger"></span>
              </div>
              <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input border shadow" aria-required="true" />
                <label class="form-check-label ">Ghi Nhớ Tên Đăng Nhập Và Mật Khẩu</label>
              </div>
              <div>
                <button type="submit" class="w-100 btn btn-lg btn-outline-primary">Đăng Nhập</button>
              </div>
              <div class="d-flex justify-content-between pt-2">
                <p>
                  <a asp-action="ForgotPassword">Quên mật khẩu?</a>
                </p>
                <p>
                  <a asp-action="Register" asp-route-returnUrl="@Model.RedirectUrl">Đăng ký một tài khoản mới</a>
                </p>
              </div>

            </form>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  @{
    <partial name="_ValidationScriptsPartial" />
  }
}