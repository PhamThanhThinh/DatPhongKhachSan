@model Presentation.Models.AmenityViewModel

<div class="w-100 card border-0 p-4">
  <div class="card-header bg-primary bg-gradient m-lg-0 py-3">
    <div class="row">
      <div class="col-12 text-center">
        <h2 class="text-white py-2">Cập nhật thông tin dịch vụ khách sạn</h2>
      </div>
    </div>
  </div>
  <div class="card-body border p-4">
    <form method="post" class="row">
      <input hidden asp-for="Amenity.Id" />
      <div class="p-3">
        <div class="form-floating py-2 col-12">
          <select asp-for="@Model.Amenity.HotelId"
                  asp-items="@Model.HotelList"
                  class="form-control form-select border shadow">
            <option disabled selected>-- Chọn khách sạn --</option>
          </select>
          <label asp-for="Amenity.HotelId" class="ms-2">Khách sạn</label>
          <span asp-validation-for="Amenity.HotelId" class="text-danger"></span>
        </div>
        <div class="form-floating py-2 col-12">
          <input asp-for="Amenity.Id" disabled class="form-control border shadow" />
          <label asp-for="Amenity.Id" class="ms-2">Khóa định danh</label>
          <span asp-validation-for="Amenity.Id" class="text-danger"></span>
        </div>

        <div class="form-floating py-2 col-12">
          <input asp-for="Amenity.Name" class="form-control border shadow" />
          <label asp-for="Amenity.Name" class="ms-2">Tên dịch vụ</label>
          <span asp-validation-for="Amenity.Name" class="text-danger"></span>
        </div>

        <div class="form-floating py-2 col-12">
          <input asp-for="Amenity.Description" class="form-control border shadow" />
          <label asp-for="Amenity.Description" class="ms-2">Mô tả</label>
          <span asp-validation-for="Amenity.Description" class="text-danger"></span>
        </div>

        <div class="row pt-2">
          <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary w-100">
              <i class="bi bi-check-circle"></i> Cập Nhật
            </button>
          </div>
          <div class="col-6 col-md-3">
            <a asp-controller="HotelNumber" asp-action="Index" class="btn btn-danger w-100">
              <i class="bi bi-x-circle"></i> Thoát
            </a>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

@section Scripts {
  @{
    <partial name="_ValidationScriptsPartial" />
  }
}