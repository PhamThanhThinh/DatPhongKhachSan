@model IEnumerable<Domain.Entities.Hotel>

@* <h2>Danh sách khách sạn</h2> *@

<div class="w-100 card border-0 p-4">
  <div class="card-header bg-primary bg-gradient m-lg-0 py-3">
    <div class="row">
      <div class="col-12 text-center">
        <h2 class="text-white py-2">Danh sách khách sạn</h2>
      </div>
    </div>
  </div>
  <div class="card-body border p-4">

    <div class="row pb-4">
      <div class="col-6 offset-6 text-end">
        <a asp-controller="Hotel" asp-action="Create" class="btn btn-primary">
          <i class="bi bi-plus-circle"></i> Thêm mới thông tin khách sạn
        </a>
      </div>
    </div>

    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>
            Tên Dịch Vụ
          </th>
          <th>
            Giá Phòng
          </th>
          <th>
            Số Mét Vuông
          </th>
          <th>
            Số Người Tối Đa
          </th>
          <th>
            Chức Năng
          </th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
          <tr>
            <td>
              @item.Name
            </td>
            <td>
              @item.Price
            </td>
            <td>
              @item.SquareMeter
            </td>
            <td>
              @item.Occupancy
            </td>
            <td>
              <div class="w-100 btn-group" role="group">
                <a 
                  asp-controller="Hotel" 
                  asp-action="Update" 
                  asp-route-hotelId="@item.Id"
                  class="btn btn-primary"
                >
                  @* <i class="bi bi-vector-pen"></i> Cập Nhật Thông Tin *@
                  <i class="bi bi-pencil-square"></i> Cập Nhật Thông Tin
                </a>
                <a asp-controller="Hotel"
                   asp-action="Delete"
                   asp-route-hotelId="@item.Id"
                   class="btn btn-danger">
                  <i class="bi bi-trash3"></i> Xóa Dữ Liệu
                </a>
              </div>
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>