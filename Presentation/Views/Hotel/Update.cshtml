@model Domain.Entities.Hotel

<div class="w-100 card border-0 p-4">
  <div class="card-header bg-primary bg-gradient m-lg-0 py-3">
    <div class="row">
      <div class="col-12 text-center">
        <h2 class="text-white py-2">Cập nhật thông tin khách sạn</h2>
      </div>
    </div>
  </div>
  <div class="card-body border p-4">
    <form method="post" class="row" enctype="multipart/form-data">
      <input hidden asp-for="Id" />
      <div class="p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @* <div asp-validation-summary="All" class="text-danger"></div> *@
        @* <div asp-validation-summary="None" class="text-danger"></div> *@
        <div class="form-floating py-2 col-12">
          @* <input asp-for="@Model.Name" class="form-control border shadow" /> *@
          <input asp-for="Name" class="form-control border shadow" />
          @* <label asp-for="Name" class="ms-2">Tên khách sạn</label> *@
          <label asp-for="Name" class="ms-2"></label>
          <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-floating py-2 col-12">
          <input asp-for="Description" class="form-control border shadow" />
          <label asp-for="Description" class="ms-2">Mô tả</label>
        </div>
        <div class="form-floating py-2 col-12">
          <input asp-for="Price" class="form-control border shadow" />
          <label asp-for="Price" class="ms-2">Giá Phòng *</label>
          <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-floating py-2 col-12">
          <input asp-for="SquareMeter" class="form-control border shadow" />
          <label asp-for="SquareMeter" class="ms-2">Số Mét Vuông *</label>
          <span asp-validation-for="SquareMeter" class="text-danger"></span>
        </div>
        <div class="form-floating py-2 col-12">
          <input asp-for="Occupancy" class="form-control border shadow" />
          <label asp-for="Occupancy" class="ms-2">Số Người Tối Đa *</label>
          <span asp-validation-for="Occupancy" class="text-danger"></span>
        </div>
        <div class="form-floating py-2 col-12">
          <input asp-for="ImageUrl" class="form-control border shadow" />
          <label asp-for="ImageUrl" class="ms-2">Hình ảnh</label>
        </div>
        <div class="row pt-2">
          <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary w-100">
              <i class="bi bi-check-circle"></i> Lưu
            </button>
          </div>
          <div class="col-6 col-md-3">
            <a asp-controller="Hotel" asp-action="Index" class="btn btn-danger w-100">
              <i class="bi bi-x-circle"></i> Thoát
            </a>
          </div>
        </div>
      </div>
      <div class="col-2">
        <img src="@Model.ImageUrl" width="100%"
             style="border-radius: 5px; border: 1px solid #007599 " />
      </div>
    </form>
  </div>
</div>

@section Scripts {
  @{
    // <partial name="_ValidationScriptsPartial"></partial>
    <partial name="_ValidationScriptsPartial" />
  }
}