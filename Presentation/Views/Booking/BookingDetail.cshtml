@using Domain.Entities
@model Booking

<div class="p-4 mt-0 mt-lg-4">
  <div class="row" style="border: 1px solid #aaa;" >
    <div class="col-12 col-lg-6 p-4 mt-2 mt-md-0">
      <div class="row p-1" style="border-radius:20px;">
        <div class="col-6">
          <h3 class="text-dark">Chi Tiết Booking</h3>
        </div>
        <div class="col-6 text-end">
          <a class="btn btn-primary my-2"
          asp-action="Index" asp-controller="Booking">
            <i class="bi bi-arrow-left-circle">Trở Lại Danh Sách Booking</i>
          </a>
        </div>
        <hr />
          <partial name="_HotelDetail" model="@Model.Hotel"></partial>
        <hr />
        <div class="text-end">
          <h4 class="text-danger fw-bold">
            Tổng Giá Booking (Tổng Giá Phòng):
            <span style="border-bottom: 1px solid #E5DA5B">
              @Model.TotalCost.ToString("c")
            </span>
          </h4>
        </div>
      </div>
    </div>

    <div class="col-12 col-lg-6 p-4 mt-2 mt-md-0" style="border-left: 1px solid #aaa">
      <form method="post">
        @* Nhận Phòng
        Trả Phòng *@
        <div class="row pt-1 mb-3" style="border-radius: 20px;">
          <div class="col-6">
            <h3 class="text-dark">Thông Tin Đặt Phòng</h3>
          </div>
          <div class="col-6">
            @if (Model.Status == UserRoles.StatusApproved || Model.Status == UserRoles.StatusPending)
            {
              
            }
            <button type="submit" class="btn btn-sm btn-outline-danger form-control my-1">Nhận Phòng</button>
          </div>
        </div>
        <div class="row"></div>
      </form>
    </div>

  </div>
</div>